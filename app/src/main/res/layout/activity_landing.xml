<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".landing.ProfileActivity">

    <!-- Background with bubbles -->
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="centerCrop"
        android:contentDescription="Background" />

    <!-- Main Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="24dp">

        <!-- Spacer for top -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8" />

        <!-- Logo Circle -->
        <FrameLayout
            android:layout_width="150dp"
            android:layout_height="150dp">

            <!-- Outer glow/shadow circle -->
            <View
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:background="@drawable/landinglogo" />


        </FrameLayout>

        <!-- App Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SoapySignal"
            android:textSize="36sp"
            android:textColor="#3B82F6"
            android:textStyle="bold|italic"
            android:fontFamily="sans-serif-medium"
            android:layout_marginTop="16dp" />

        <!-- Tagline -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clean Clothes, Right on Time."
            android:textSize="16sp"
            android:textColor="#64748B"
            android:layout_marginTop="4dp" />

        <!-- Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5" />

        <!-- Feature Card -->

        <!-- Spacer -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/landing_card_bg"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="24dp"
            android:paddingTop="40dp"
            android:paddingBottom="32dp">

            <!-- Monitoring Icon - uses your existing drawable -->
            <ImageView
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:contentDescription="Monitor Icon"
                android:src="@drawable/glass" />

            <!-- Feature Text -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:gravity="center"
                android:text="Monitor washer status in real-time"
                android:textColor="#1E293B"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.5" />

        <!-- Get Started Button -->
        <Button
            android:id="@+id/btnGetStarted"
            android:layout_width="220dp"
            android:layout_height="56dp"
            android:text="Get Started"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:textStyle="bold"
            android:background="@drawable/rounded_button_blue"
            app:backgroundTint="@null" />

        <!-- Bottom Spacer -->
        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6" />

    </LinearLayout>
</FrameLayout>